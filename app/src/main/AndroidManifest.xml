<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shuijianbaozi.html">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.shuijianbaozi.html.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shuijianbaozi.html.js.AndroidJsActivity"
            android:label="@string/title_activity_android_js" />
        <activity android:name="com.shuijianbaozi.html.openapp.HtmlOpenActivity" />
        <activity
            android:name="com.shuijianbaozi.html.openapp.AppActivityActivity"
            android:label="@string/title_activity_app">

            <!-- 第一种方式:自定义 -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="AndroidHtml"
                    android:scheme="app" />
            </intent-filter>

            <!-- 第二种方式：以http协议 -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.baidu.com"
                    android:scheme="http" />
            </intent-filter>

            <!-- 2中方式选择一种就可以了 -->
        </activity>
        <!--用于小嗨内部测试使用-->
        <activity android:name="com.shuijianbaozi.html.xiaohai.ContentActivity"/>
    </application>

</manifest>